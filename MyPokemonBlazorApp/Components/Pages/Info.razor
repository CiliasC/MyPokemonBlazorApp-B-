@page "/Info/{id:int}"
@inject DatabaseContext DbContext

<h3>Info</h3>

@if (pokemon is not null)
{
    <p>@pokemon?.Name</p>
    <p>@pokemon?.HP</p>
}
else
{
        <p>No pokemon found for that Id</p>
}


@code {
    [Parameter]
    public int Id { get; set; }

    private Pokemon? pokemon;

    protected override void OnInitialized()
    {
        pokemon = DbContext.Pokemons.SingleOrDefault(p => p.Id == Id);
    }
}




<div class="progress" role="progressbar" aria-label="Success example" aria-valuenow="@pokemon?.HP" aria-valuemin="0" aria-valuemax="255">
    <div class="progress-bar bg-success" style=<p>@(pokemon?.HP*100/255)%</p>>HP</div>
</div>
<div class="progress" role="progressbar" aria-label="Info example" aria-valuenow="@pokemon?.Attack" aria-valuemin="0" aria-valuemax="255">
    <div class="progress-bar bg-info text-dark" style=<p>@(pokemon?.Attack*100/255)%</p>>Attack</div>
</div>
<div class="progress" role="progressbar" aria-label="Warning example" aria-valuenow="@pokemon?.Defence" aria-valuemin="0" aria-valuemax="255">
    <div class="progress-bar bg-warning text-dark" style=<p>@(pokemon?.Defence*100/255)%</p>>Defence</div>
</div>
<div class="progress" role="progressbar" aria-label="Danger example" aria-valuenow="@pokemon?.Speed" aria-valuemin="0" aria-valuemax="255">
    <div class="progress-bar bg-danger" style=<p>@(pokemon?.Speed*100/255)%</p>>Speed</div>
</div>

<div class="progress" role="progressbar" aria-label="Success example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
  <div class="progress-bar bg-success" style="width: 25%">Hello</div>


 